{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "savingsPlanID",
      "userID",
      "balance",
      "transactions",
      "goalAmount",
      "duration",
      "progress",
      "remainingAmount"
    ],
    "properties": {
      "savingsPlanID": {
        "bsonType": "string",
        "description": "Unique identifier for the savings plan"
      },
      "userID": {
        "bsonType": "string",
        "description": "ID of the user associated with the plan"
      },
      "balance": {
        "bsonType": "double",
        "description": "Total saved amount"
      },
      "transactions": {
        "bsonType": "array",
        "description": "List of related transaction IDs",
        "items": {
          "bsonType": "object",
          "properties": {
            "transactionID": {
              "bsonType": "string",
              "description": "Unique transaction identifier and is required"
            },
            "userID": {
              "bsonType": "string",
              "description": "ID of the user making the transaction and is required"
            },
            "amountSpent": {
              "bsonType": "double",
              "description": "Amount spent on the transaction and is required"
            },
            "transactionType": {
              "bsonType": "string",
              "description": "Type of transaction (e.g., Card) and is required"
            },
            "transactionDate": {
              "bsonType": "date",
              "description": "Date when the transaction occurred and is required"
            },
            "location": {
              "bsonType": "object",
              "required": ["city", "state", "zipcode"],
              "properties": {
                "city": {
                  "bsonType": "string",
                  "description": "City where the transaction took place"
                },
                "state": {
                  "bsonType": "string",
                  "description": "State where the transaction took place"
                },
                "zipcode": {
                  "bsonType": "string",
                  "description": "Zipcode of the transaction location"
                }
              }
            },
            "description": {
              "bsonType": "string",
              "description": "Description of the transaction"
            },
            "merchantName": {
              "bsonType": "string",
              "description": "Name of the merchant"
            },
            "merchantType": {
              "bsonType": "string",
              "description": "Type of merchant"
            },
            "category": {
              "bsonType": "string",
              "description": "Category of the transaction"
            }
          }
        }
      },
      "goalAmount": {
        "bsonType": "double",
        "description": "Target amount for the savings goal"
      },
      "duration": {
        "bsonType": "string",
        "description": "Length of time for savings (e.g., weekly, monthly)"
      },
      "progress": {
        "bsonType": "double",
        "description": "Current progress toward the goal (%)"
      },
      "remainingAmount": {
        "bsonType": "double",
        "description": "Amount left to reach the goal"
      }
    }
  }
}